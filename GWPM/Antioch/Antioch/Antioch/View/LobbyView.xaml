<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Antioch.View.LobbyView">
  <ContentView.Content>
        <Grid x:Name="main_grid" Padding="10,20,20,20">
            <Grid.RowDefinitions BackgroundColor="White">
                <RowDefinition Height="2*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <Frame BorderColor="Gray" Grid.Row="0" Grid.Column="0" BackgroundColor="#D77186">
                <StackLayout>
                    <Label Text=" 공 지 "   TextColor="White" FontSize="Large" FontAttributes="Bold" />
                    <Label Text=" Notice "   TextColor="White" FontSize="Body" FontAttributes="Bold"/>
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnTapped"/>
                    </StackLayout.GestureRecognizers>
                </StackLayout>
            </Frame>

            <Frame BorderColor="Gray" Grid.Row="0" Grid.Column="1" BackgroundColor="#61A2DA">
                <StackLayout >
                    <Label  Text="주보" TextColor="White" FontSize="Large" FontAttributes="Bold" />
                    <Label  Text="Bulletin" TextColor="White" FontSize="Large" FontAttributes="Bold" />
                </StackLayout>
            </Frame>
            <Frame BorderColor="Gray" Grid.Row="0" Grid.Column="2" BackgroundColor="#6CB7DA" >
                <StackLayout >
                    <Label  Text="말씀" TextColor="White" FontSize="Large" FontAttributes="Bold" />
                    <Label  Text="Sermon" TextColor="White" FontSize="Large" FontAttributes="Bold" />
                </StackLayout>
            </Frame>




            <Frame BorderColor="Gray"  CornerRadius="5"  Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"  BackgroundColor="#B5B5B3">
                <StackLayout>
                    <Label  Text="커뮤니티"  TextColor="White" FontSize="Large" FontAttributes="Bold" />
                    <Label  Text="Community"  TextColor="White" FontSize="Large" FontAttributes="Bold" />
                </StackLayout>
            </Frame>

            <Frame BorderColor="Gray"  CornerRadius="5"  Grid.Row="1" Grid.Column="2"  BackgroundColor="#D75725">
                <StackLayout >
                    <Label Text="찬송"  TextColor="White" FontSize="Large" FontAttributes="Bold" />
                    <Label Text="Worship"  TextColor="White" FontSize="Large" FontAttributes="Bold" />
                </StackLayout>
            </Frame>




            <Frame BorderColor="Gray"  CornerRadius="5"  Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"  BackgroundColor="#00225D">
                <StackLayout >
                    <Label  Text="기도제목"  TextColor="White" FontSize="Large" FontAttributes="Bold" />
                    <Label  Text="Pray"  TextColor="White" FontSize="Large" FontAttributes="Bold" />
                </StackLayout>
            </Frame>

            <Frame BorderColor="Gray"  CornerRadius="5"  Grid.Row="2" Grid.Column="2"  BackgroundColor="#E9A621">
                <StackLayout >
                    <Label Text="성경"  TextColor="White" FontSize="Large" FontAttributes="Bold" />
                    <Label Text="Bible"  TextColor="White" FontSize="Large" FontAttributes="Bold" />
                </StackLayout>
            </Frame>


            <Frame BorderColor="Gray"  CornerRadius="5"  Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"  BackgroundColor="#763262">
                <StackLayout >
                    <Label  Text="홈페이지" TextColor="White" FontSize="Large" FontAttributes="Bold" />
                    <Label  Text="HomePage" TextColor="White" FontSize="Large" FontAttributes="Bold" />
                </StackLayout>
            </Frame>

            <Frame BorderColor="Gray"  CornerRadius="5"  Grid.Row="3" Grid.Column="2"  BackgroundColor="#171635">
                <StackLayout >
                    <Label Text="질문" TextColor="White" FontSize="Large" FontAttributes="Bold" />
                    <Label Text="QNA" TextColor="White" FontSize="Large" FontAttributes="Bold" />
                </StackLayout>
            </Frame>







            <Frame BorderColor="Gray"  CornerRadius="5"  Grid.Row="4" Grid.ColumnSpan="3"  BackgroundColor="#00225D">
                <StackLayout >

                </StackLayout>
            </Frame>

        </Grid>
    </ContentView.Content>
</ContentView>