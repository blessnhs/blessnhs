<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Antioch.BibleView">

 
        <Grid x:Name="main_grid" Padding="10,20,20,20">
            <Grid.RowDefinitions BackgroundColor="White">
                <RowDefinition Height="50" />
                <RowDefinition Height="9*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>


            <Button Grid.Row="0" Grid.Column="0" Text = "◁" Clicked="Handle_Clicked_Prev">
                <Button.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Handle_Clicked_Prev"/>
                </Button.GestureRecognizers>
            </Button>

            <Button Grid.Row="0" Grid.Column="1" Text = "구약" Grid.ColumnSpan="2" Clicked="Handle_Clicked_OldTestament">
                <Button.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Handle_Clicked_OldTestament"/>
                </Button.GestureRecognizers>
            </Button>

            <Button Grid.Row="0" Grid.Column="3" Text = "신약" Grid.ColumnSpan="2"  Clicked="Handle_Clicked_NewTestament">
                <Button.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Handle_Clicked_NewTestament"/>
                </Button.GestureRecognizers>
            </Button>

            <Button Grid.Row="0" Grid.Column="5" x:Name="Title" Grid.ColumnSpan="3"/>

            <Button Grid.Row="0" Grid.Column="8" Text = "S" Clicked="Handle_Clicked_Shared">
                <Button.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Handle_Clicked_Shared"/>
                </Button.GestureRecognizers>
            </Button>


            <Button Grid.Row="0" Grid.Column="9" Text = "▷" Clicked="Handle_Clicked_Next">
                <Button.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Handle_Clicked_Next"/>
                </Button.GestureRecognizers>
            </Button>


            <ScrollView x:Name="scrollView"  Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="10">

                <StackLayout  x:Name="MainLayout">
                </StackLayout>

            </ScrollView>

    </Grid>

    
</ContentView>