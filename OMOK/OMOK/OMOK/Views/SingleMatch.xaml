<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="OMOK.Views.SingleMatch">
    
            <StackLayout  BackgroundColor="White">
                <!--<Image x:Name="backgroundboard"></Image>-->
                <!-- Single-cell Grid for Board and overlays. -->
        <Grid x:Name="grid" RowSpacing="1" ColumnSpacing="1" BackgroundColor="#43343E" Padding="10,50,10,50">

        </Grid>

        <StackLayout Orientation="Vertical">
            <Button Text="두기"   Clicked="OnPutStone" BackgroundColor="#E6DEDE" Margin="0,0,0,0"/>
            <Button Text="시작 하기"   Clicked="OnRetryClicked" BackgroundColor="#E6DEDE" Margin="0,0,0,0"/>
            <Button x:Name="LeaveRoom" Text="나가기"  Clicked="OnLeaveClicked" BackgroundColor="#E6DEDE" Margin="0,0,0,0"/>
        </StackLayout>

    </StackLayout>
    
</ContentPage>